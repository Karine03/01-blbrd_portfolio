<% content_for(:title, project.name) %>

<div id="banner-<%= project.id %>" class="text-center project-banner">
  <div class="arrow-container fadeInArrow">
    <a href="#">
      <i class="fa fa-angle-down scroll-btn"></i>
    </a>
  </div>
</div>

<div id="project" class="small-padded text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h1><%= project.name %></h1>
        <% if project.link %>
          <p class="project-link"><%= link_to("See website", project.link, target: "blank") %></p>
        <% end %>
        <p><%= project.medium %></p>
        <% project.images.each do |image| %>
          <% image_url = "#{project.img_path}/#{image}" %>
          <%= image_tag image_url, class: "img-responsive img-padded" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
